% Fast Derivatives
\NewDocumentCommand{\fder}{omo}{\ensuremath{%
    \frac
    {%
        \IfValueTF{#1}
        {%
            \IfValueTF{#3}%
            {%
                d^{#3} #1%
            }%
            {%
                d #1%
            }%
        }{%
            \IfValueTF{#3}%
            {%
                d^{3}  
            }{%
                d
            }
        }
    }{%
        \IfValueTF{#3}
        {%
            d #2^{#3}
        }{%
            d #2
        }
    }
}}

\NewDocumentCommand{\fderop}{omm}{\ensuremath{%
    \frac{\IfValueTF{#1}{d #1}{d}}{d #2}\left( #3 \right)
}}

