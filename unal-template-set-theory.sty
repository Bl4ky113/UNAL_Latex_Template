
\ProvidesPackage{unal-template-set-theory}[%
    2025/08/07 --- 1.0.0; %
    UNAL Modular Template --- Set Theory Module;%
    Set Theory Fast Binds, Commands and Such for UNAL Modular Template%
]
\NeedsTeXFormat{LaTeX2e}

\RequirePackage{mathtools} % Math General
\RequirePackage{unicode-math} % Math Symbols
\RequirePackage{amsmath} % Math Align
\RequirePackage{amsthm} % Math Envs

% Fast In Equal Order 
\def\ineq{\ensuremath{\underline{\in}}}

%% Fast Logic symbols %%
% Fast Implies
\NewDocumentCommand{\limp}{}{\ensuremath{\rightarrow}}
% Fast Semantic Implies
\NewDocumentCommand{\lsimp}{}{\ensuremath{\Rightarrow}}
% Fast Equivalence
\NewDocumentCommand{\leqv}{}{\ensuremath{\leftrightarrow}}
% Fast Semantic Equivalence
\NewDocumentCommand{\lseqv}{}{\ensuremath{\Leftrightarrow}}

% Fast Power Set
\NewDocumentCommand{\fpows}{m}{\ensuremath{%
    \symscr{P}\left( #1 \right)%
}}

% Fast Sucesor Element 
\NewDocumentCommand{\fsus}{m}{\ensuremath{%
    {#1}^{+}%
}}
\NewDocumentCommand{\fsusp}{m}{\ensuremath{%
    \left(#1\right)^{+}%
}}

% Fast Set Functions from _ to _
\NewDocumentCommand{\fsetfuncs}{mm}{\ensuremath{%
    {}^{#1}{#2}%
}}

% Fast Relation Image
\NewDocumentCommand{\frelimg}{mm}{\ensuremath{%
    #1 \left[ #2 \right]%
}}

% Fast Identity Relation
\def\fidentity{\ensuremath{\symbbit{i}}}

\NewDocumentCommand{\frelid}{m}{\ensuremath{%
    \fidentity_{#1}%
}}

% Fast Relation Def
\NewDocumentCommand{\freldef}{mmm}{\ensuremath{%
    #1 \subseteq #2 \times #3%
}}

% Fast Equivalence Relation
\NewDocumentCommand{\feqrel}{mm}{\ensuremath{%
    \left[#1\right]_{#2}
}}

% Fast Function Def
\NewDocumentCommand{\ffuncdef}{mmm}{\ensuremath{%
    #1: #2 \rightarrow #3%
}}

% Fast Function Image Def
\NewDocumentCommand{\ffuncimgdef}{mm}{\ensuremath{%
    #1 \mapsto #2%
}}

% Fast Set Cardinal
\NewDocumentCommand{\fcard}{m}{\ensuremath{%
    \left| #1 \right|%
}}

% Fast Ordered Pair of elements
\NewDocumentCommand{\fpair}{mm}{\ensuremath{%
    \left( #1, #2 \right)%
}}

% Fast Ordered Pair of elements
\NewDocumentCommand{\fpairdef}{mm}{\ensuremath{%
    \fset{\fset{#1}, \fset{#1, #2}}%
}}

% Fast Order
\NewDocumentCommand{\forder}{mm}{\ensuremath{%
    \fpair{#1}{#2}%
}}

%% Fast Succesions
% Fast (injective) Succession
\NewDocumentCommand{\fsucc}{mmm}{\ensuremath{%
    \left\langle #1_{i} \right\rangle_{i = #2}^{#3}%
}}
\NewDocumentCommand{\fgsucc}{mmmm}{\ensuremath{%
    \left\langle #1_{#2} \right\rangle_{#2 = #3}^{#4}%
}}
\NewDocumentCommand{\fssucc}{mmm}{\ensuremath{%
    \left\langle #1_#2 \right\rangle_{#2 \in #3}%
}}

% Fast (any) Succession
\NewDocumentCommand{\fsuccalt}{mmm}{\ensuremath{%
    \left\{ #1_{i} \right\}_{i = #2}^{#3}%
}}
\NewDocumentCommand{\fgsuccalt}{mmmm}{\ensuremath{%
    \left\{ #1_{#2} \right\}_{#2 = #3}^{#4}%
}}
\NewDocumentCommand{\fssuccalt}{mmm}{\ensuremath{%
    \left\{ #1_#2 \right\}_{#2 \in #3}%
}}

% Fast Tuple Succesions
\NewDocumentCommand{\fsucctup}{mmm}{\ensuremath{%
    \left( #1_{i} \right)_{i = #2}^{#3}%
}}
\NewDocumentCommand{\fgsucctup}{mmmm}{\ensuremath{%
    \left( #1_{#2} \right)_{#2 = #3}^{#4}%
}}
\NewDocumentCommand{\fssucctup}{mmm}{\ensuremath{%
    \left( #1_#2 \right)_{#2 \in #3}%
}}

%% Fast n-tuple
% To use it split the values of the n-tuple with commas ','
% \ftuple{A,B,C,D}
\NewDocumentCommand{\ftuple}{>{\SplitList{,}}m}{\ensuremath{%
    \left(%
        \ProcessList{#1}{\handletupleitem}%
    \right)%
}}
\NewDocumentCommand{\handletupleitem}{m}{\ensuremath{%
    \ifthenelse{\isundefined{\FirstItem}}{%
        #1%
    }{%
        ,#1%
    }%
    \def\FirstItem{0}
}}
